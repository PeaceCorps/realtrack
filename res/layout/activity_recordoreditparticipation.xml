                android:textColor="@color/darkgrey"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numSpMen1017"
                android:layout_gravity="fill_horizontal"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:hint="@string/numberofmen"
                android:inputType="number"
                android:textColor="@color/darkgrey"
                android:textColorHint="#969696"
                android:textSize="19sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/spmen1824CheckBox"
                android:layout_gravity="fill_horizontal"
                android:text="@string/men1824"
                android:textColor="@color/darkgrey"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numSpMen1824"
                android:layout_gravity="fill_horizontal"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:hint="@string/numberofmen"
                android:inputType="number"
                android:textColor="@color/darkgrey"
                android:textColorHint="#969696"
                android:textSize="19sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/spmenOver25CheckBox"
                android:layout_gravity="fill_horizontal"
                android:text="@string/menover25"
                android:textColor="@color/darkgrey"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numSpMenOver25"
                android:layout_gravity="fill_horizontal"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:hint="@string/numberofmen"
                android:inputType="number"
                android:textColor="@color/darkgrey"
                android:textColorHint="#969696"
                android:textSize="19sp"
                android:textStyle="bold" />
        </android.support.v7.widget.GridLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightergrey" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/spwomen"
                android:textColor="@color/darkgrey"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <android.support.v7.widget.GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:alignmentMode="alignBounds"
            app:columnCount="2"
            app:columnOrderPreserved="false"
            app:rowCount="3"
            app:useDefaultMargins="true" >

            <CheckBox
                android:id="@+id/spwomen09CheckBox"
                android:layout_gravity="fill_horizontal"
                android:text="@string/women09"
                android:textColor="@color/darkgrey"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numSpWomen09"
                android:layout_gravity="fill_horizontal"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:hint="@string/numberofwomen"
                android:inputType="number"
                android:textColor="@color/darkgrey"
                android:textColorHint="#969696"
                android:textSize="19sp"
                android:textStyle="bold" />
            
            <CheckBox
                android:id="@+id/spwomen1017CheckBox"
                android:layout_gravity="fill_horizontal"
                android:text="@string/women1017"
                android:textColor="@color/darkgrey"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numSpWomen1017"
                android:layout_gravity="fill_horizontal"
                android:background="@android:color/transparent"
                android:clickable="false"
