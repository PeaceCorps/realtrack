            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightergrey" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/spmen"
