<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="@color/darkgrey" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
    <item android:bottom="1dp">
        <shape>
            <gradient
                android:startColor="@color/homeitemlightgrey"
                android:endColor="@color/homeitemdarkgrey"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/homeitemdarkgrey" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</layer-list>