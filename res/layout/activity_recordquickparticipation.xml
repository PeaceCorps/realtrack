<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:background="@drawable/globalpattern_background">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/darkgrey"
                android:background="@color/lightgrey"
                android:padding="10dp"
                android:text="Title"/>

        <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColor="@color/darkgrey"
                android:background="@drawable/homelistitem_background"
                android:layout_marginBottom="0dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/darkgrey"
                android:background="@color/lightgrey"
                android:padding="10dp"
                android:text="Date"/>

        <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColor="@color/darkgrey"
                android:background="@drawable/homelistitem_background"
                android:layout_marginBottom="0dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:hint="MM/DD/YYYY"
                android:textColorHint="#969696"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/darkgrey"
                android:background="@color/lightgrey"
                android:padding="10dp"
                android:text="Time"/>

        <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColor="@color/darkgrey"
                android:background="@drawable/homelistitem_background"
                android:layout_marginBottom="0dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:hint="HH:MM AM/PM"
                android:textColorHint="#969696"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/darkgrey"
                android:background="@color/lightgrey"
                android:padding="10dp"
                android:text="Participation"/>

        <android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                              xmlns:app="http://schemas.android.com/apk/res-auto"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent"
                                              app:useDefaultMargins="true"
                                              app:alignmentMode="alignBounds"
                                              app:columnOrderPreserved="false"
                                              app:columnCount="2"
                                              android:background="@drawable/homelistitem_background"
                                              android:padding="10dp">

            <CheckBox
                    android:textColor="@color/darkgrey"
                    android:textStyle="bold"
                    android:textSize="19dp"
                    android:layout_gravity="fill_horizontal"
                    android:text="Men"
                    android:id="@+id/menCheckBox"/>

            <EditText
                    android:id="@+id/numMen"
                    android:textColor="@color/darkgrey"
                    android:textStyle="bold"
                    android:textSize="19dp"
                    android:clickable="false"
                    android:layout_gravity="fill_horizontal"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:hint="No. of Men"
                    android:textColorHint="#969696"/>

            <CheckBox
                    android:textColor="@color/darkgrey"
                    android:textStyle="bold"
                    android:textSize="19dp"
                    android:layout_gravity="fill_horizontal"
                    android:text="Women"
                    android:id="@+id/womenCheckBox"/>

            <EditText
                    android:id="@+id/numWomen"
                    android:textColor="@color/darkgrey"
                    android:textStyle="bold"
                    android:textSize="19dp"
                    android:clickable="false"
                    android:layout_gravity="fill_horizontal"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:hint="No. of Women"
                    android:textColorHint="#969696"/>
        </android.support.v7.widget.GridLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/darkgrey"
                android:background="@color/lightgrey"
                android:padding="10dp"
                android:text="Notes"/>

        <EditText
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColor="@color/darkgrey"
                android:background="@drawable/homelistitem_background"
                android:layout_marginBottom="0dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:inputType="text|textImeMultiLine|textMultiLine"
                android:maxLines="6"
                android:minLines="3"
                android:hint="Enter Notes (Optional)"
                android:textColorHint="#969696"/>

        <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

            <Button
                    android:textSize="25dp"
                    android:textColor="@android:color/white"
                    android:background="@color/blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Save"
                    android:textStyle="bold"
                    android:id="@+id/submitbutton"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>