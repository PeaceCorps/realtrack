                android:textColor="@color/darkgrey"
                android:textColorHint="#969696"
                android:textSize="19sp"
                android:textStyle="bold" />
            
            <CheckBox
                android:id="@+id/men1824CheckBox"
                android:layout_gravity="fill_horizontal"
                android:text="@string/men1824"
                android:textColor="@color/darkgrey"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
