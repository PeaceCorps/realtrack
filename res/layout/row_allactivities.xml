<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@color/white"
                android:paddingLeft="10dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkgrey"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.hackforchange.common.StyledButton
                android:id="@+id/quickParticipationBtn"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.1"
                android:background="@drawable/normalitem_background"
                android:text="@string/fa_users"
                android:textColor="@drawable/normalitem_textcolor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.hackforchange.common.StyledButton
                android:id="@+id/editActivityBtn"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.1"
                android:background="@drawable/normalitem_background"
                android:text="@string/fa_edit_pencil"
                android:textColor="@drawable/normalitem_textcolor"
                android:textSize="25sp"
                android:textStyle="bold" />

            <com.hackforchange.common.StyledButton
                android:id="@+id/deleteActivityBtn"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.1"
                android:background="@drawable/normalitem_background"
                android:text="@string/fa_trash"
                android:textColor="@drawable/normalitem_textcolor"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/startDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightgrey"
            android:gravity="center_vertical"
            android:paddingBottom="1dp"
            android:paddingLeft="10dp"
            android:paddingTop="1dp"
            android:textColor="@color/darkgrey"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>