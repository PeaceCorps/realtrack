<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:padding="10dp"
                  android:background="#3d3d3d">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="10dp">
            <TextView android:layout_width="150dp"
                      android:layout_height="fill_parent"
                      android:gravity="center_vertical"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentBottom="true"
                      android:textStyle="bold"
                      android:textSize="25dp"
                      android:textColor="#dbdbdb"
                      android:background="#9933cc"
                      android:paddingLeft="7dp"
                      android:paddingTop="7dp"
                      android:paddingBottom="7dp"
                      android:layout_marginTop="7dp"
                      android:layout_marginBottom="7dp"
                      android:text="Title"/>
            <EditText android:id="@+id/title"
                      android:layout_width="fill_parent"
                      android:layout_height="match_parent"
                      android:gravity="center_vertical"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentBottom="true"
                      android:textStyle="bold"
                      android:textSize="19dp"
                      android:textColor="#000000"
                      android:background="#db7400"
                      android:paddingLeft="6dp"
                      android:paddingRight="2dp"
                      android:paddingBottom="2dp"
                      android:layout_marginLeft="5dp"
                      android:layout_marginTop="7dp"
                      android:layout_marginBottom="7dp"/>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="10dp">
            <TextView android:layout_width="150dp"
                      android:layout_height="fill_parent"
                      android:gravity="center_vertical"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentBottom="true"
                      android:textStyle="bold"
                      android:textSize="25dp"
                      android:textColor="#dbdbdb"
                      android:background="#9933cc"
                      android:paddingLeft="7dp"
                      android:paddingTop="7dp"
                      android:paddingBottom="7dp"
                      android:layout_marginTop="7dp"
                      android:layout_marginBottom="7dp"
                      android:text="Start Date"/>
            <EditText android:id="@+id/startDate"
                      android:layout_width="fill_parent"
                      android:layout_height="match_parent"
                      android:gravity="center_vertical"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentBottom="true"
                      android:textStyle="bold"
                      android:textSize="19dp"
                      android:textColor="#000000"
                      android:background="#db7400"
                      android:paddingLeft="6dp"
                      android:paddingRight="2dp"
                      android:paddingBottom="2dp"
                      android:layout_marginLeft="5dp"
                      android:layout_marginTop="7dp"
                      android:layout_marginBottom="7dp"
                      android:inputType="date"/>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="10dp">
            <TextView android:layout_width="150dp"
                      android:layout_height="fill_parent"
                      android:gravity="center_vertical"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentBottom="true"
                      android:textStyle="bold"
                      android:textSize="25dp"
                      android:textColor="#dbdbdb"
                      android:background="#9933cc"
                      android:paddingLeft="7dp"
                      android:paddingTop="7dp"
                      android:paddingBottom="7dp"
                      android:layout_marginTop="7dp"
                      android:layout_marginBottom="7dp"
                      android:text="End Date"/>
            <EditText android:id="@+id/endDate"
                      android:layout_width="fill_parent"
                      android:layout_height="match_parent"
                      android:gravity="center_vertical"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentBottom="true"
                      android:textStyle="bold"
                      android:textSize="19dp"
                      android:textColor="#000000"
                      android:background="#db7400"
                      android:paddingLeft="6dp"
                      android:paddingRight="2dp"
                      android:paddingBottom="2dp"
                      android:layout_marginLeft="5dp"
                      android:layout_marginTop="7dp"
                      android:layout_marginBottom="7dp"
                      android:inputType="date"/>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="10dp">
            <TextView android:layout_width="150dp"
                      android:layout_height="fill_parent"
                      android:gravity="center_vertical"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentBottom="true"
                      android:textStyle="bold"
                      android:textSize="25dp"
                      android:textColor="#dbdbdb"
                      android:background="#9933cc"
                      android:paddingLeft="7dp"
                      android:paddingTop="7dp"
                      android:paddingBottom="7dp"
                      android:layout_marginTop="7dp"
                      android:layout_marginBottom="7dp"
                      android:text="Notes"/>
            <EditText android:id="@+id/notes"
                      android:layout_width="fill_parent"
                      android:layout_height="match_parent"
                      android:gravity="center_vertical"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentBottom="true"
                      android:textStyle="bold"
                      android:textSize="19dp"
                      android:textColor="#000000"
                      android:background="#db7400"
                      android:paddingLeft="6dp"
                      android:paddingRight="2dp"
                      android:paddingBottom="2dp"
                      android:layout_marginLeft="5dp"
                      android:layout_marginTop="7dp"
                      android:layout_marginBottom="7dp"
                      android:inputType="text|textImeMultiLine|textMultiLine"
                      android:maxLines="10"
                      android:minLines="6"/>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="10dp">
            <TextView android:layout_width="150dp"
                      android:layout_height="fill_parent"
                      android:gravity="center_vertical"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentBottom="true"
                      android:textStyle="bold"
                      android:textSize="25dp"
                      android:textColor="#dbdbdb"
                      android:background="#9933cc"
                      android:paddingLeft="7dp"
                      android:paddingTop="7dp"
                      android:paddingBottom="7dp"
                      android:layout_marginTop="7dp"
                      android:layout_marginBottom="7dp"
                      android:text="Organizations"/>
            <EditText android:id="@+id/orgs"
                      android:layout_width="fill_parent"
                      android:layout_height="match_parent"
                      android:gravity="center_vertical"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentBottom="true"
                      android:textStyle="bold"
                      android:textSize="19dp"
                      android:textColor="#000000"
                      android:background="#db7400"
                      android:paddingLeft="6dp"
                      android:paddingRight="2dp"
                      android:paddingBottom="2dp"
                      android:layout_marginLeft="5dp"
                      android:layout_marginTop="7dp"
                      android:layout_marginBottom="7dp"
                      android:inputType="text|textImeMultiLine|textMultiLine"
                      android:maxLines="10"
                      android:minLines="6"/>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="10dp">
            <TextView android:layout_width="150dp"
                      android:layout_height="fill_parent"
                      android:gravity="center_vertical"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentBottom="true"
                      android:textStyle="bold"
                      android:textSize="25dp"
                      android:textColor="#dbdbdb"
                      android:background="#9933cc"
                      android:paddingLeft="7dp"
                      android:paddingTop="7dp"
                      android:paddingBottom="7dp"
                      android:layout_marginTop="7dp"
                      android:layout_marginBottom="7dp"
                      android:text="Communities"/>
            <EditText android:id="@+id/comms"
                      android:layout_width="fill_parent"
                      android:layout_height="match_parent"
                      android:gravity="center_vertical"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentBottom="true"
                      android:textStyle="bold"
                      android:textSize="19dp"
                      android:textColor="#000000"
                      android:background="#db7400"
                      android:paddingLeft="6dp"
                      android:paddingRight="2dp"
                      android:paddingBottom="2dp"
                      android:layout_marginLeft="5dp"
                      android:layout_marginTop="7dp"
                      android:layout_marginBottom="7dp"
                      android:inputType="text|textImeMultiLine|textMultiLine"
                      android:maxLines="10"
                      android:minLines="6"/>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="10dp">
            <TextView android:layout_width="150dp"
                      android:layout_height="fill_parent"
                      android:gravity="center_vertical"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentBottom="true"
                      android:textStyle="bold"
                      android:textSize="25dp"
                      android:textColor="#dbdbdb"
                      android:background="#9933cc"
                      android:paddingLeft="7dp"
                      android:paddingTop="7dp"
                      android:paddingBottom="7dp"
                      android:layout_marginTop="7dp"
                      android:layout_marginBottom="7dp"
                      android:text="Initiatives"/>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="vertical"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:textColor="#000000"
                          android:background="#db7400"
                          android:paddingLeft="6dp"
                          android:paddingRight="2dp"
                          android:paddingBottom="2dp"
                          android:layout_marginLeft="5dp"
                          android:layout_marginTop="7dp"
                          android:layout_marginBottom="7dp">
                <CheckBox
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="19dp"
                        android:text="WID"
                        android:id="@+id/widCheckBox"/>
                <CheckBox
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="19dp"
                        android:text="Youth"
                        android:id="@+id/youthCheckBox"/>
                <CheckBox
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="19dp"
                        android:text="Malaria"
                        android:id="@+id/malariaCheckBox"/>
                <CheckBox
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="19dp"
                        android:text="Food Security"
                        android:id="@+id/foodSecurityCheckBox"/>
                <CheckBox
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="19dp"
                        android:text="ECPA"
                        android:id="@+id/ECPACheckBox"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:gravity="center_horizontal">
            <Button
                    android:textSize="22dp"
                    android:textColor="#dbdbdb"
                    android:background="#0099cc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Save"
                    android:textStyle="bold"
                    android:id="@+id/submitbutton"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>