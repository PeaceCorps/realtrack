<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:background="@drawable/globalpattern_background">

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/darkgrey"
                android:background="@color/lightgrey"
                android:textSize="25sp"
                android:padding="10dp"
                android:text="@string/title"/>

        <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="@color/darkgrey"
                android:background="@color/white"
                android:layout_marginBottom="0dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:hint="@string/nameprojecthint"
                android:inputType="textCapWords"
                android:textColorHint="#969696"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/darkgrey"
                android:background="@color/lightgrey"
                android:padding="10dp"
                android:text="@string/startdate"/>

        <EditText
                android:id="@+id/startDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="@color/darkgrey"
                android:background="@color/white"
                android:layout_marginBottom="0dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:inputType="date"
                android:hint="@string/dateformathint"
                android:textColorHint="#969696"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/darkgrey"
                android:background="@color/lightgrey"
                android:padding="10dp"
                android:text="@string/enddate"/>

        <EditText
                android:id="@+id/endDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="@color/darkgrey"
                android:background="@color/white"
                android:layout_marginBottom="0dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:inputType="date"
                android:hint="@string/dateformathint"
                android:textColorHint="#969696"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/darkgrey"
                android:background="@color/lightgrey"
                android:padding="10dp"
                android:text="@string/notes"/>

        <EditText
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="@color/darkgrey"
                android:background="@color/white"
                android:layout_marginBottom="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:inputType="text|textImeMultiLine|textMultiLine|textCapSentences"
                android:maxLines="6"
                android:minLines="3"
                android:hint="@string/enternotes"
                android:textColorHint="#969696"/>

        <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

            <com.hackforchange.common.StyledButton
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/greenitem_background"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/save"
                    android:textStyle="bold"
                    android:id="@+id/submitbutton"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>